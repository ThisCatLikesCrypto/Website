---
const {title} = Astro.props;
---

<!DOCTYPE html>
<html lang=en-GB>

<head>
    <meta charset=utf-8>
    <meta name=viewport content="width=device-width, initial-scale=1.0, maximum-scale=5.0">
    <meta http-equiv=X-UA-Compatible content="IE=edge">
    <title>{title}</title>
    <link rel="stylesheet" href="/css/pfl-webador.css">

</head>

<body id=top
    class="jw-is-no-slideshow jw-header-is-text jw-is-segment-page jw-is-frontend jw-is-no-sidebar jw-is-no-messagebar jw-is-no-touch-device jw-is-no-mobile jw-menu-is-desktop">
    <div class=jw-background style=--header-height:232px></div>
    <div class=jw-body>
        <div class=topmenu>
            <header>
                <div class="topmenu-inner js-topbar-content-container">
                    <div class=jw-header-logo>
                        <div class="jw-header jw-header-title-container jw-header-text jw-header-text-toggle"
                            data-stylable=true>
                            <a id=jw-header-title class="jw-header-title" href="/archive/pfl-webador/"> <span
                                    style=display:inline-block><span
                                        style=display:inline-block>PersonalFinancialLiteracy.webador.com </span></span>
                            </a>
                        </div>
                    </div>
                    <nav class="menu jw-menu-copy">
                        <ul id=jw-menu class="jw-menu jw-menu-horizontal sf-js-enabled sf-arrows"
                            style=touch-action:pan-y>
                            <li class=jw-menu-item>
                                <a class=jw-menu-link href=/archive/pfl-webador/ data-page-link-id=9067992>
                                    <span>Home</span>
                                </a>
                            </li>
                            <li class="jw-menu-item jw-menu-has-submenu">
                                <a class="jw-menu-link sf-with-ul" href=/archive/pfl-webador/saving-for-goals
                                    data-page-link-id=9103681>
                                    <span>Saving for Goals</span>
                                    <span class="jw-arrow jw-arrow-toplevel"></span>
                                </a>
                            </li>
                            <li class="jw-menu-item jw-menu-has-submenu jw-menu-is-active">
                                <a class="jw-menu-link js-active-menu-item sf-with-ul"
                                    href=/archive/pfl-webador/financial-security data-page-link-id=9068050>
                                    <span>
                                        Financial Security </span>
                                    <span class="jw-arrow jw-arrow-toplevel"></span>
                                </a>
                            </li>

                        </ul>

                    </nav>
                </div>
            </header>
        </div>
        <slot />
        <footer class=block-footer>
            <div data-section-name=footer class="jw-section jw-section-footer jw-responsive">
                <div
                    class="jw-strip jw-strip--default jw-strip--style-color jw-strip--primary jw-strip--color-default jw-strip--padding-both">
                    <div class=jw-strip__content-container>
                        <div class="jw-strip__content jw-responsive">
                            <div class="jw-tree-node jw-element jw-simple-root jw-tree-container jw-node-is-first-child jw-node-is-last-child">
                                <div class="jw-tree-node jw-element jw-image-text jw-node-is-first-child jw-node-is-last-child">
                                    <div class=jw-element-imagetext-text>
                                        <p><strong><span style=color:#202020><a href=/archive/pfl-webador/disclaimer style=color:#202020>I'm not
                                                        a financial adviser. Everything here
                                                        is for education purposes only.</a></span></strong></p>
                                    </div>
                                </div>
                            </div>
                            <div class="jw-credits clear">
                                <div class=jw-credits-owner>
                                    <div id=jw-footer-text>
                                        <div class=jw-footer-text-content>
                                            Â© 2022 Personal Financial Literacy&nbsp; </div>
                                    </div>
                                </div>
                                <div class=jw-credits-right>
                                    <div id=jw-credits-tool>
                                        <small>
                                            Powered by <a href="https://www.webador.com/">Webador</a>
                                        </small>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </footer>
    </div>
</body>

</html>