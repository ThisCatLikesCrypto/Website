---
interface Props {
	title: string;
}

const { title } = Astro.props;

import "../styles/html5.css";
---

<!DOCTYPE html>
<html lang="en-GB">
	<head>
        <meta charset="UTF-8">
        <meta name="viewport" content="width=device-width, initial-scale=1.0">
        <meta name="title" content={title}>
        <meta name="description" content="HTML5 docs">
        <meta name="author" content="Wilbur Williams">
		<meta name="og:title" content={title}>
		<meta name="og:description" content="HTML5 docs">
		<meta name="fediverse:creator" content="@wilbur@wetdry.world">
		<title>{title}</title>
		<link rel="dns-prefetch" href="https://assets.c48.uk">
		<link rel="preconnect" href="https://assets.c48.uk" crossorigin>
    </head>
    <body>
        <nav>
            <div>
                <a href="/HTML5/">Home</a>
            </div>
        </nav>
        <main>
            <slot />
        </main>
    </body>
</html>